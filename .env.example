# Environment Configuration for Crypto Dashboard

# =============================================================================
# API Configuration
# =============================================================================

# CoinGecko API Key (Optional - for higher rate limits)
# Get your API key from: https://www.coingecko.com/api/pricing
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key_here

# =============================================================================
# Vercel Configuration (for deployment)
# =============================================================================

# Vercel Token (Required for GitHub Actions deployment)
# Get your token from: https://vercel.com/account/tokens
VERCEL_TOKEN=your_vercel_token_here

# Vercel Organization ID (Required for GitHub Actions deployment)  
# Find in your Vercel dashboard under team/organization settings
VERCEL_ORG_ID=your_vercel_org_id_here

# Vercel Project ID (Required for GitHub Actions deployment)
# Find in your project settings on Vercel
VERCEL_PROJECT_ID=your_vercel_project_id_here

# =============================================================================
# Docker Hub Configuration (for container deployment)
# =============================================================================

# Docker Hub Username (Required for Docker image publishing)
DOCKER_USERNAME=your_docker_username_here

# Docker Hub Password/Token (Required for Docker image publishing)
# Recommended to use access token instead of password
DOCKER_PASSWORD=your_docker_token_here

# =============================================================================
# GitHub Configuration (for enhanced CI/CD features)
# =============================================================================

# Lighthouse CI GitHub App Token (Optional - for performance monitoring)
# Get your token from: https://github.com/apps/lighthouse-ci
LHCI_GITHUB_APP_TOKEN=your_lhci_token_here

# =============================================================================
# Analytics & Monitoring (Optional)
# =============================================================================

# Google Analytics Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn_here

# =============================================================================
# Security Configuration
# =============================================================================

# Content Security Policy (CSP) Nonce (Optional)
CSP_NONCE=generated_nonce_value

# API Rate Limiting (Optional)
RATE_LIMIT_RPM=100
RATE_LIMIT_WINDOW=60000

# =============================================================================
# Development Configuration
# =============================================================================

# Development API base URL (for local development)
DEV_API_BASE_URL=http://localhost:3000/api

# Debug mode (for enhanced logging in development)
DEBUG=false

# =============================================================================
# Production Configuration
# =============================================================================

# Production domain (for canonical URLs and SEO)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Database connection (if using database for favorites, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database

# Redis connection (if using caching)
# REDIS_URL=redis://user:password@host:port

# =============================================================================
# Feature Flags (Optional)
# =============================================================================

# Enable/disable features for gradual rollout
NEXT_PUBLIC_ENABLE_FAVORITES=false
NEXT_PUBLIC_ENABLE_ALERTS=false
NEXT_PUBLIC_ENABLE_PORTFOLIO=false

# =============================================================================
# Localization (Optional)
# =============================================================================

# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,pt,es